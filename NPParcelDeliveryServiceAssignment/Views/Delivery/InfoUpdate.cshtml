@model IEnumerable<NPParcelDeliveryServiceAssignment.Models.ShippingRate>


<h1>DeliveryInfoUpdate</h1>

@if (Model.ToList().Count > 0)
{
	<div class="table-responsive">
		<table id="viewStaff" class="table table-striped table-bordered">
			<thead class="table-dark">
				<tr>
					<th>ShippingRateID</th>
					<th>FromCity</th>
					<th>FromCountry</th>
					<th>ToCity</th>
					<th>ToCountry</th>
					<th>ShippingRate</th>
					<th>Currency</th>
					<th>TransitTime</th>
					<th>LastUpdatedBy</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.ShippingRateID</td>
						<td>@item.FromCity</td>
						<td>@item.FromCountry</td>
						<td>@item.ToCity</td>
						<td>@item.ToCountry</td>
						<td>@item.ShipRate</td>
						<td>@item.Currency</td>
						<td>@item.TransitTime</td>
						<td>@item.LastUpdatedBy</td>
						<td>
							<a asp-action="ShippingRateEdit" 
					   asp-route-id="@item.ShippingRateID">Edit</a>
							<a asp-action="Details" asp-controller="Delivery"
					   asp-route-id="@item.ShippingRateID">Details</a>
							<a asp-action="Delete" asp-controller="Delivery"
					   asp-route-id="@item.ShippingRateID">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<span style="color:red">No record found!</span>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
