@model NPParcelDeliveryServiceAssignment.Models.ShippingRate

@{
    ViewData["Title"] = "CreateShippingRate";
    Layout = "~/Views/Shared/_amanagerLayout.cshtml";
}

<h1>CreateShippingRate</h1>

<h4>ShippingRate</h4>
<hr />
<div class="row">
    <p>@TempData["CreateSuccess"]</p>
    <div class="col-md-4">
        <form asp-action="CreateShippingRate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p style="color:red">@TempData["Fail"]</p>
            <div class="form-group">
                <label asp-for="FromCity" class="control-label"></label>
                <input asp-for="FromCity" class="form-control" />
                <span asp-validation-for="FromCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromCountry" class="control-label"></label>
                <select asp-for="FromCountry" asp-items="@(new SelectList(ViewData["country"]as List<SelectListItem>,"Value","Text" ))" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="ToCity" class="control-label"></label>
                <input asp-for="ToCity" class="form-control" />
                <span asp-validation-for="ToCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToCountry" class="control-label"></label>
                <select asp-for="ToCountry" asp-items="@(new SelectList(ViewData["country"]as List<SelectListItem>,"Value","Text" ))" class="form-select"></select>
            </div>
            <div class="form-group">
                <label asp-for="ShipRate" class="control-label"></label>
                <input asp-for="ShipRate" class="form-control" />
                <span asp-validation-for="ShipRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <input asp-for="Currency" class="form-control" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransitTime" class="control-label"></label>
                <input asp-for="TransitTime" class="form-control" />
                <span asp-validation-for="TransitTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowShippingRateInfo">Back to List</a>
</div>

