@model NPParcelDeliveryServiceAssignment.Models.CashVoucher

@{
    ViewData["Title"] = "IssueCompensationVoucher";
    Layout = "~/Views/Shared/_smanagerLayout.cshtml";
}

<h1>IssueCompensationVoucher</h1>

<h4>CashVoucher</h4>

<hr />
<div class="row">
    <form asp-action="FailurereportList">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CashVoucherID" class="control-label"></label>
            <input asp-for="CashVoucherID" class="form-control" />
            <span asp-validation-for="CashVoucherID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StaffID" class="control-label"></label>
            <input asp-for="StaffID" class="form-control" />
            <span asp-validation-for="StaffID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Currency" class="control-label"></label>
            <input asp-for="Currency" class="form-control" />
            <span asp-validation-for="Currency" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IssuingCode" class="control-label"></label>
            <input asp-for="IssuingCode" class="form-control" />
            <span asp-validation-for="IssuingCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReceiverName" class="control-label"></label>
            <input asp-for="ReceiverName" class="form-control" />
            <span asp-validation-for="ReceiverName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReceiverTelNo" class="control-label"></label>
            <input asp-for="ReceiverTelNo" class="form-control" />
            <span asp-validation-for="ReceiverTelNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateTimeIssued" class="control-label"></label>
            <input asp-for="DateTimeIssued" class="form-control" />
            <span asp-validation-for="DateTimeIssued" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <input asp-for="Status" class="form-control" disabled />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit"> Issue Cash Voucher </button>
        </div>

        <p style="color:red">@TempData["readyIssued"]</p>
        <p style="color:green">@TempData["Issued"]</p>
        <p>@TempData["Issued"]</p>
    </form>
    <div>
        <a asp-action="FailurereportList">Back to List</a>
    </div>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}