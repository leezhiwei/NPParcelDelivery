@model NPParcelDeliveryServiceAssignment.Models.CashVoucher

@{
    ViewData["Title"] = "IssueSpecialVoucher";
    Layout = "~/Views/Shared/_amanagerLayout.cshtml";
}

<h1>IssueSpecialVoucher</h1>

<h4>CashVoucher</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IssueSpecialVoucher">
            <p>@TempData["cMonth"]</p>
            <p>@TempData["mBirthMonth"]</p>
            <p>@TempData["canIssue"]</p>

            <p>@TempData["IssueAmount"]</p>
            <p>@ViewData["error"]</p>
            @{
            if((bool)ViewData["CanIssue"]) 
            {
            <div class="form-group">
                <input type="submit" value="Issue" class="btn btn-primary" />
            </div>
            }
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="IssueCashVoucherList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
