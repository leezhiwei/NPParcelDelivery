@model IEnumerable<NPParcelDeliveryServiceAssignment.Models.DeliveryFailure>

<h1>Delivery Failure Reports</h1>
<hr />
<br />
@if (Model.ToList().Count > 0)
{
	<div class="table-responsive">
		<table id="viewMember" class="table table-striped table-bordered">
			<thead class="table-dark">
				<tr>
					<th>ReportID</th>
					<th>ParcelID</th>
					<th>DeliveryManID</th>
					<th>FailureType</th>
					<th>Description</th>
					<th>StationMgrID</th>
					<th>FollowUpAction</th>
					<th>DateCreated</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.ReportID</td>
						<td>@item.ParcelID</td>
						<td>@item.DeliveryManID</td>
						<td>@item.FailureType</td>
						<td>@item.Description</td>
						<td>@item.StationMgrID</td>
						<td>@item.FollowUpAction</td>
						<td>@item.DateCreated</td>
						<td>
							<a asp-action="IssueCompensationVoucher" asp-controller="CashVoucher"
							   asp-route-id="@item.ReportID">Issue Cash Voucher</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<span style="color:red">No record found!</span>
}
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
