<div>
    <h1 class="text-center">Welcome to NPCS</h1>
    <h3 class="text-center">Please Login</h3>
</div>
<div class="container d-flex justify-content-center" id="loginContainer">
    <form asp-controller="Login" asp-action="Index" method="post">
